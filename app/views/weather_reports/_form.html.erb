<%= form_for @weather_report, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :time_received, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :time_received, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :sunrise, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :sunrise, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :sunset, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :sunset, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :weather, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :weather, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :weather_desc, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :weather_desc, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :temp, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :temp, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :temp_min, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :temp_min, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :temp_max, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :temp_max, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :pressure, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :pressure, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :humidity, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :humidity, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :wind_speed, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :wind_speed, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :wind_gust, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :wind_gust, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :wind_degree, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :wind_degree, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :clouds, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :clouds, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :rain_3h, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :rain_3h, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :snow_3h, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :snow_3h, :class => 'text_field' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  weather_reports_path, :class => 'btn' %>
    </div>
<% end %>
