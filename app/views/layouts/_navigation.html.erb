<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to image_tag("weatherviz_logo.png", size: '64x64'), root_path, class: 'brand' %>
      <div class="nav-collapse">
        <ul class="nav">
          <% if current_user.present? %>
            <li><%= link_to 'Profile', current_user %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li><%= link_to 'Alerts' %></li>
          <% end %>
          <% if current_user.present? && current_user.admin? %>
            <li><%= link_to "Users", users_path %></li>
          <% end %>
          <li><%= link_to 'Locations', locations_path %></li>
          <li><%= link_to 'Reports', weather_reports_path %></li>
          <li><%= link_to 'Search', root_path %></li>
        </ul>
        <%= render 'layouts/authentication' %>
      </div>
    </div>
  </div>
</div>