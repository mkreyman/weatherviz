<% provide(:title, 'All users') %>
</div>
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="span6">
        <%- model_class = User -%>
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
      </div>
    </div>
  </div>
</div>
<div class="main-content">
  <div class="container">

    <div class="row">
      <div class="about span12" >

        <%= will_paginate %>
        <br>

        <table class="table table-striped">
          <thead>
          <tr>
            <th>Gravatar</th>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:first_name) %></th>
            <th><%= model_class.human_attribute_name(:last_name) %></th>
            <th><%= model_class.human_attribute_name(:email) %></th>
            <th><%= model_class.human_attribute_name(:omniauth) %></th>
            <th><%= model_class.human_attribute_name(:admin) %></th>
            <th><%= model_class.human_attribute_name(:latitude) %></th>
            <th><%= model_class.human_attribute_name(:longitude) %></th>
            <th><%= model_class.human_attribute_name(:ip_address) %></th>
            <th><%= model_class.human_attribute_name(:created_at) %></th>
            <th><%= model_class.human_attribute_name(:updated_at) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
          </thead>

          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= gravatar_for user %></td>
                <td><%= user.id %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.omniauth %></td>
                <td><%= user.admin %></td>
                <td><%= user.latitude %></td>
                <td><%= user.longitude %></td>
                <td><%= user.ip_address %></td>
                <td><%= user.created_at %></td>
                <td><%= user.updated_at %></td>
                <td>
                  <%= link_to 'Alerts', alerts_user_path(user), :class => 'btn btn-mini' %>
                  <%= link_to 'Logs', logs_user_path(user), :class => 'btn btn-mini' %>
                  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                  user,
                                  :method => :delete,
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                  :class => 'btn btn-mini btn-danger' %>
                      </td>
                  </tr>
          <% end %>
          </tbody>
        </table>

        <br>
        <%= will_paginate %>

      </div>
    </div>
  </div>
</div>



