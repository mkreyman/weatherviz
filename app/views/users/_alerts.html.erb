<h1>Listing alerts for <%= @user.first_name %> </h1>

<table>
  <thead>
  <tr>
    <th>Alert name</th>
    <th>By email</th>
    <th>By sms</th>
    <th>Email</th>
    <th>Sms</th>
    <th>Email verified</th>
    <th>Phone verified</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @user.alerts.each do |alert| %>
      <tr>
        <td><%= alert.alert_name %></td>
        <td><%= alert.by_email %></td>
        <td><%= alert.by_sms %></td>
        <td><%= alert.email %></td>
        <td><%= alert.sms %></td>
        <td><%= alert.email_verified %></td>
        <td><%= alert.phone_verified %></td>
        <td><%= alert.active %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alert', new_alert_path %>