<% provide(:title, 'Logs') %>
</div>

<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="span12">
        <h1>Logs for <%= @user.first_name %> <%= @user.last_name %></h1>
      </div>
    </div>
  </div>
</div>

<div class="main-content">
  <div class="container">

    <div class="row">
      <div class="about span12" >

        <%= will_paginate @logs %>

        <table class="table table-striped">
          <thead>
          <tr>
            <th>Sent</th>
            <th>Message</th>
            <th>Sent to</th>
          </tr>
          </thead>

          <tbody>
          <% @logs.each do |log| %>
              <tr>
                <td><%= log %></td>
                <td><%# log.sent_at.strftime("%x, %I:%M %P") %></td>
                <td><%# log.alert_message %></td>
                <td><%# log.alert_message_types %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

        <%= will_paginate @logs %>
        <br>

      </div>
    </div>
  </div>
</div>