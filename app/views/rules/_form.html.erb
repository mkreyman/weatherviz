<%= form_for @rule, :html => { :class => 'form-horizontal' } do |f| %>

    <div class="control-group">
      <%= f.label :field, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :field, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :operation, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :operation, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :value, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :value, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :triggered, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :triggered, :class => 'check_box' %>
      </div>
    </div>
    <%= f.hidden_field  :alert_id %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  rules_path, :class => 'btn' %>
    </div>
<% end %>
