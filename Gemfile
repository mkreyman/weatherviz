group :development, :test do
  gem 'rspec-rails'
  gem 'guard-bundler'
  gem 'guard-rspec'
  gem 'guard-rubocop'
  gem 'factory_girl_rails'
  gem 'byebug'
  gem 'sqlite3'
end

